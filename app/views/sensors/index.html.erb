		<h1> <%= params[:pagetitle] %> </h1>

		<!-- breadcrumbs -->
		<ol class="breadcrumb">
			<li><a href="#">Home</a></li>
			<li><a href="#">Features</a></li>
			<li class="active">Page Title</li>
		</ol><!-- /breadcrumbs -->

	</div>
