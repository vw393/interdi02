<p id="notice"><%= notice %></p>

<h1>Listing Boards</h1>

<table>
  <thead>
    <tr>
      <th>Pn</th>
      <th>Name</th>
      <th>Descr</th>
      <th>Image</th>
      <th>Doc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.pn %></td>
        <td><%= board.name %></td>
        <td><%= board.descr %></td>
        <td><%= image_tag board.image.url %></td>
        <td><%= image_tag "/assets/pdf-icon.png" if (board.document)%></td>
        <td><%= link_to 'Show', board %></td>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

