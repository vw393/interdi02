


<header id="list-sensors">
  <div class="container">



<p id="notice"><%= notice %></p>

<h1><%= t ".listing"%></h1>

<table  class="table table-hover custom">
  <thead>
    <tr>
      <th><%= t ".tsensors"%></th>
      <th><%= t ".boards"%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @combinations.each do |combination| %>
      <tr>
        <td><%= combination.sensor.descr %></td>
        <td><%= combination.board.descr %></td>
        <td><%= link_to 'Show', combination %></td>
        <td><%= link_to 'Edit', edit_combination_path(combination) %></td>
        <td><%= link_to 'Destroy', combination, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Combination', new_combination_path %>

</div>
</header>
